{
  "manifest": {
    "$BASE_DIR": "${configdir}",
    "$OUTPUT_DIR": "$BASE_DIR\\output"
  },
  "target_simulator": "NEURON",
  "run": {
    "tstart": 0.0,
    "tstop": 30.0,
    "dt": 0.025,
    "dL": 20.0,
    "spike_threshold": -15.0,
    "nsteps_block": 5000
  },
  "conditions": {
    "celsius": 34.0,
    "v_init": -91.63188171386719
  },
  "inputs": {
    "Source_spikes": {
      "input_type": "spikes",
      "module": "csv",
      "input_file": "$BASE_DIR\\synaptic_input.csv",
      "node_set": "Source"
    }
  },
  "output": {
    "log_file": "log.txt",
    "output_dir": "$OUTPUT_DIR",
    "spikes_file": "spikes.h5"
  },
  "reports": {
    "v_report": {
      "variable_name": "v",
      "cells": "all",
      "module": "membrane_report",
      "sections": "soma"
    },
    "ecp_report": {
      "cells": "all",
      "variable_name": "ecp",
      "module": "extracellular",
      "electrode_positions": "$BASE_DIR\\linear_electrode.csv",
      "file_name": "ecp.h5",
      "electrode_channels": "all"
    }
  },
  "node_sets_file": "$BASE_DIR\\node_sets.json"
}